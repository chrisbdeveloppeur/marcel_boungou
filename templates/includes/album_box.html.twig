<div class="{{ album }} column is-one-quarter" id="{{ album }}">
    <figure class="image is-square">
        {% if album and album.image %}{{ album }}
            <img src="{{ vich_uploader_asset(album, 'imageFile') }}" alt="">
        {% else %}
            <img src="https://bulma.io/images/placeholders/480x480.png" alt="">
        {% endif %}
    </figure>

    <div class="is-flex is-flex-direction-column is-justify-content-center column px-3 py-3">
        <div class="has-text-centered has-text-white music-text">{{ album }}
            <span class="has-text-weight-bold album-name">{{ album }}</span>
        </div>
    </div>

</div>
