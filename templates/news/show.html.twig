{% extends 'base.html.twig' %}

{% block title %}{% trans %}News{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="subtitle has-text-white has-text-centered pt-3">{% trans %}News{% endtrans %}<b> {{ news }}</b></h1>

    <div class="column is-flex-tablet is-flex-direction-row is-justify-content-center">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'index', 'type':'success', 'entity' : news, 'entity_type' : 'news', 'text': 'Back to News list'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'type':'success', 'entity' : news, 'entity_type' : 'news', 'text': 'Edit'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'send', 'type':'success', 'entity' : news, 'entity_type' : 'news', 'text': 'Send news'|trans, 'confirm_msg':'are you sure you want to send this newsletter to all subscribers ?'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'type':'danger', 'entity' : news, 'entity_type' : 'news', 'text': 'Delete news'|trans, 'confirm_msg':'are you sure you want to delete this newsletter ?'|trans } %}
        </div>
    </div>

    <div class="table-container">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}Creation date{% endtrans %}</th>
                <td>{{ news.datetime ? news.datetime|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ news.description|raw }}</td>
            </tr>
            <tr>
                <th>{% trans %}English description{% endtrans %}</th>
                <td>{{ news.descriptionEn|raw }}</td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
