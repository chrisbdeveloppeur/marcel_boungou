{% if new is defined %}
    <article class="shadow-box-1 m-2 p-2 is-relative">
        <span class="help has-text-grey">{{ new.datetime|format_datetime('full','medium',locale=app.request.locale) }}</span>
        {% if is_granted('ROLE_ADMIN') %}
            {% include 'includes/edit_entity_button.html.twig' with {'entity' : new, 'entity_type' : 'news' } %}
        {% endif %}
        <div class="has-text-white overflow-wrap-break-word">
            {% if new.title %}
                <h3 class="title is-4 has-text-white">{{ new }}</h3>
            {% endif %}
            {{ new.description|raw }}
        </div>
        {#
        <nav class="level is-mobile is-justify-content-right">
            <div class="level-right">
                <a class="level-item" title="{{ 'share'|trans }}">
                    <span class="icon is-small"><i class="fas fa-share"></i></span>
                </a>
                <a class="level-item" title="{{ 'retweet'|trans }}">
                    <span class="icon is-small"><i class="fas fa-retweet"></i></span>
                </a>
            </div>
        </nav>
        #}
    </article>
{% endif %}
