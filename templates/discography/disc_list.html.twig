<div class="column is-two-thirds-desktop is-full-mobile">
    {% for music in musics %}
        <div class="column is-flex is-align-items-center is-flex-direction-row has-text-white px-0 py-0 my-5 has-background-success is-hidden-touch">
            <figure class="image is-64x64 mx-3 my-3">
                <img src="{{ asset('images/event_img/720x240.png') }}" style="height: 100%">
            </figure>
            <div class="is-flex is-align-items-center column px-3 py-3">
                <audio src="{{ vich_uploader_asset(music, 'musicFile') }}" preload="auto" controls style="width: 100%"></audio>
            </div>
        </div>

        <div class="card is-relative is-hidden-desktop" style="height: 200px;width: 200px">

            <span class="icon has-text-black pointer-hover play-btn" onclick="startMusic(this)" style="position: absolute;height: 100%;width: 100%;z-index: 1">
                <i class="fas fa-2x fa-play"></i>
            </span>

            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
            </div>
            <div class="column">
                <div class="content">
                    {{ music }}
                </div>
                <div>
                    <audio src="{{ vich_uploader_asset(music, 'musicFile') }}" preload="auto"></audio>
                </div>
            </div>
        </div>

    {% endfor %}
</div>





