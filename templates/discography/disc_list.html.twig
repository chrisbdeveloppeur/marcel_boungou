<div class="column is-full is-full-mobile">
        <!-- Start Carousel -->
        <div class="carousel" style="height: 250px;">
                {% for music in musics %}
                    <div class="px-5 py-5 music-carousel opacity100onhover scalup-hover transition-3ms">
                        <div class="card is-relative" style="height: 200px;width: 200px">
                            <span class="icon has-text-black pointer-hover play-btn" style="position: absolute;height: 100%;width: 100%;z-index: 1">
                                <i class="fas fa-2x fa-play"></i>
                            </span>
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="column">
                                <div class="content">
                                    {{ music }}
                                </div>
                                <div>
                                    <audio src="{{ vich_uploader_asset(music, 'musicFile') }}" preload="auto"></audio>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
        <!-- End Carousel -->
</div>





