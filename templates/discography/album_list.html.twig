<div class="column is-full is-full-mobile">
    <!-- Start Carousel -->
    <div class="carousel">
        {% for album in albums|sort((a, b) => b.year <=> a.year) %}
            <div class="px-5 py-5 album-carousel opacity100onhover scalup-hover transition-3ms">

                <a data-href="{{ album }}" onclick="searchAncrage(this)" class="card is-relative" style="width: 200px; height: 100%;">

                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('album/edit_album_button.html.twig') }}
                    {% endif %}

                    <div class="card-image">
                        <figure class="image is-4by3">
                            {% if album.image %}
                                <img src="{{ vich_uploader_asset(album, 'imageFile') }}">
                            {% else %}
                                <img src="https://picsum.photos/id/{{ random(1,100) }}/240/240">
                            {% endif %}
                        </figure>
                    </div>

                    <div class="column">
                        <div class="content has-text-black">
                            {{ album }}<br>
                            {% if album.year %}{{ album.year }}{% endif %}<br>
                            {% if album.feat %}<span class="help">{% trans %}Featuring : {% endtrans %} {{ album.feat }}</span>{% endif %}
                        </div>
                    </div>

                </a>
            </div>
        {% endfor %}
    </div>
    <!-- End Carousel -->
</div>





