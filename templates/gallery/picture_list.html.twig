<div class="column is-full is-full-mobile">
    <!-- Start Carousel -->
    <div class="carousel">
        {% for picture in pictures|sort((a, b) => b.updatedat <=> a.updatedat) %}
            <div class="px-5 py-5 scalup-hover transition-1s is-relative">

                {% if is_granted('ROLE_ADMIN') %}
{#                    {{ include('picture/edit_picture_button.html.twig') }}#}
                {% endif %}

                <a data-href="{{ picture }}" onclick="searchAncrage(this)" class="card" style="width: 200px; height: 100%;">

                    <div class="card-image">
                        <figure class="image is-square">
                            {% if picture.image %}
                                <img src="{{ vich_uploader_asset(picture, 'imageFile') }}">
                            {% else %}
                                <img src="https://bulma.io/images/placeholders/480x480.png">
                            {% endif %}
                        </figure>
                    </div>

                </a>
            </div>
        {% endfor %}
    </div>
    <!-- End Carousel -->
</div>





