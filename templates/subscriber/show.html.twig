{% extends 'base.html.twig' %}

{% block title %}Subscriber{% endblock %}

{% block body %}
    <h1 class="subtitle has-text-white has-text-centered pt-3">{{ 'Subscriber'|trans }} {{ subscriber.id }}</h1>

    <div class="column is-flex-tablet is-flex-direction-row is-justify-content-center">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'index', 'type':'success', 'entity' : subscriber, 'entity_type' : 'subscrib_subscriber', 'text': 'Back to Subscribers list'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'type':'success', 'entity' : subscriber, 'entity_type' : 'subscrib_subscriber', 'text': 'Edit'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'type':'danger', 'entity' : subscriber, 'entity_type' : 'subscrib_subscriber', 'text': 'Delete subscriber'|trans, 'confirm_msg':'Are you sure you want to delete this item?'|trans } %}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscriber.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ subscriber.email }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}