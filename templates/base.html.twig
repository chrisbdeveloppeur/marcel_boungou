{# BULMA TAGS INPUT #}
<script src="https://cdn.jsdelivr.net/npm/bulma-tagsinput@2.0.0/dist/js/bulma-tagsinput.min.js"></script>


<script>

    {#     SCRIPT POUR TOOGLE NAVBAR IS-ACTIVE     #}
    document.addEventListener('DOMContentLoaded', () => {

        // Get all "navbar-burger" elements
        const $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);

        // Check if there are any navbar burgers
        if ($navbarBurgers.length > 0) {

            // Add a click event on each of them
            $navbarBurgers.forEach( el => {
                el.addEventListener('click', () => {

                    // Get the target from the "data-target" attribute
                    const target = el.dataset.target;
                    const $target = document.getElementById(target);

                    // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
                    el.classList.toggle('is-active');
                    $target.classList.toggle('is-active');

                });
            });
        }

    });
    {######################################}



    {#     SCRIPT POUR TOOGLE NAVBAR IS-ACTIVE     #}
    function toggleAttr(element) {
        element.forEach(function (el) {
            if (el.type === 'password'){
                el.type = 'text';
            }else if(el.type === 'text'){
                el.type = 'password';
            }
        });
    }

    {#     SCRIPT POUR AFFICHER OU NON LE PASSWORD D'UN FORMULAIRE    #}
    let showPasswordBtn = document.querySelectorAll('.show-password');
    showPasswordBtn.forEach(function (el) {
            el.addEventListener('click', function (){
                if (el.querySelector('i').classList.contains('fa-eye-slash')){
                    el.querySelector('i').classList.replace('fa-eye-slash','fa-eye');
                    el.querySelector('i').classList.add('has-text-dark');
                } else {
                    el.querySelector('i').classList.replace('fa-eye','fa-eye-slash');
                    el.querySelector('i').classList.remove('has-text-dark');
                }

                toggleAttr(document.querySelectorAll('.input-password'))
            })
        }
    );



    {# POSITIONNEMENT DES INFOBULL EN FONCTION DE LECRAN #}
    let hovertextbefore = document.querySelectorAll('.hovertext');
    hovertextbefore.forEach(function (el) {
        var w = window.innerWidth;
        var rect = el.getBoundingClientRect();
        if (rect.right >= (w / 2)){
            el.classList.add('right');
        }else {
            el.classList.add('left');
        }
    });


    {# Animation de rotation X pour les element de la class associés #}
    let rotationXItems = document.querySelectorAll('.rotationX');
    rotationXItems.forEach(function (el) {
        el.addEventListener('mouseenter', function () {
            this.firstElementChild.style.WebkitTransitionDuration='.5s';
            this.firstElementChild.style.webkitTransform = 'rotateX(360deg)';
        }, false);
        el.addEventListener('mouseleave', function () {
            setTimeout(function () {
                el.firstElementChild.style.webkitTransform = 'none';
            });
        })
    });

    {# Animation de rotation Y pour les element de la class associés #}
    let rotationYItems = document.querySelectorAll('.rotationY');
    rotationYItems.forEach(function (el) {
        el.addEventListener('mouseenter', function () {
            this.firstElementChild.style.WebkitTransitionDuration='.5s';
            this.firstElementChild.style.webkitTransform = 'rotateY(360deg)';
        }, false);
        el.addEventListener('mouseleave', function () {
            setTimeout(function () {
                el.firstElementChild.style.webkitTransform = 'none';
            });
        })
    });


    {# SCRIPT POUR LA RECUP DU NOM DU FICHIER A UPLOAD #}
    let fileInputs = document.querySelectorAll('.file-input');
    fileInputs.forEach(function (input) {
        input.addEventListener('change', function () {
            input.parentElement.parentElement.querySelector(".file-name").innerText = this.files[0].name;
        });
    });


    {# SCRIPT POUR BULMA TAGS INPUTS #}
    let TagsInputOptions =  {
        allowDuplicates: false,
        caseSensitive: true,
        clearSelectionOnTyping: false,
        closeDropdownOnItemSelect: true,
        delimiter: ',',
        freeInput: true,
        highlightDuplicate: true,
        highlightMatchesString: true,
        itemValue: undefined,
        itemText: undefined,
        maxTags: undefined,
        maxChars: 10,
        minChars: 1,
        noResultsLabel: 'No results found',
        placeholder: '',
        removable: true,
        searchMinChars: 1,
        searchOn: 'text',
        selectable: true,
        source: undefined,
        tagClass: 'is-rounded',
        trim: true
    };
    bulmaTagsinput.attach('input[type="tags"], select[data-type="tags"], .tags-input', TagsInputOptions);

    {#   SCRIPT SCROLL UP   #}
    let divScroll = document.getElementsByClassName('arrow_up');
    let scroll_position = 0;
    window.addEventListener('scroll', function()
    {
        scroll_position = window.scrollY;
        if (scroll_position >= 500){
            divScroll[0].style.display = 'flex';
            divScroll[0].style.opacity = 1;
            divScroll[0].style.bottom = '2rem';
        } else {
            divScroll[0].style.opacity = 0;
            divScroll[0].style.bottom = '-200px';
        }
    });
    {#   FIN DU SCRIPT SCROLL UP   #}


    {#  FADE-OUT FADE-IN DISCS  #}
    let elementsToFade = document.querySelectorAll('.fade-effect');

    document.addEventListener('scroll', function () {
        elementsToFade.forEach(changeOpacityOnTopPosition);
        // showArrowUp();
    });

    window.onload = onLoad();
    function onLoad() {
        elementsToFade.forEach(changeOpacityOnTopPosition);
    }

    function changeOpacityOnTopPosition(element) {
        if ( 0 < element.getBoundingClientRect().top && element.getBoundingClientRect().top < 750 ){
            element.classList.replace('opacity0','opacity100');
        }else {
            element.classList.replace('opacity100','opacity0');
        }
    }
    {#                               #}

</script>

