<form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="button is-danger">
        <span class="icon">
            <i class="fas fa-times"></i>
        </span>
        <span>
            {% trans %}Delete{% endtrans %}
        </span>
    </button>
</form>
