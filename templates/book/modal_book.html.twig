<div class="">

    <h3 class="subtitle has-text-white has-text-centered">{{ book.title }}</h3>

    <div class="is-flex-desktop is-flex-direction-row is-align-items-center">
        <div class="column">
            <figure class="image is-4by5">
                {% if book.image %}
                    <img src="{{ vich_uploader_asset(book, 'imageFile') }}">
                {% else %}
                    <img src="https://bulma.io/images/placeholders/480x600.png">
                {% endif %}
            </figure>
        </div>

        <div class="column">
            <figure class="image is-4by5">
                <img src="https://bulma.io/images/placeholders/480x600.png">
            </figure>
        </div>
    </div>


    <div class="column">
        {% if book.description %}
            <div class="column">
                <p class="has-text-grey">
                    {{ book.description }}
                </p>
            </div>
        {% endif %}

        {% if book.redirectlink %}
            <div class="column">
                <a href="{{ book.redirectlink }}" class="button is-success">
                    {% trans %}Go to shop{% endtrans %}
                </a>
            </div>
        {% endif %}
    </div>

</div>
