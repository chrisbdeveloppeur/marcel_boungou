{% extends 'base.html.twig' %}

{% block title %}{% trans %}Reset your password{% endtrans %}{% endblock %}

{% block body %}
    <div class="is-flex-tablet is-justify-content-center">
        <div class="box column is-two-fifths-desktop is-two-thirds-tablet">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="subtitle is-3">{% trans %}Reset your password{% endtrans %}</h1>

            {{ include('themes/_form.html.twig') }}
        </div>
    </div>
{% endblock %}
