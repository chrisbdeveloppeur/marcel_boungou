<div class="container">
    <div class="columns is-multiline is-justify-content-center">
        {% for book in books|sort %}
            <div class="column is-one-fifth-desktop is-one-third-tablet scale-up-fade">
                <div class="scalup-hover transition-1s is-relative">

                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('book/edit_book_button.html.twig') }}
                    {% endif %}

                    <a data-href="{{ book }}" onclick="document.getElementById('modalBook'+{{ book.id }}).classList.add('is-active')" class="card" style="width: 200px; height: 100%;">

                        <div class="card-image">
                            <figure class="image is-4by5">
                                {% if book.image %}
                                    <img src="{{ vich_uploader_asset(book, 'imageFile') }}">
                                {% else %}
                                    <img src="https://bulma.io/images/placeholders/480x600.png">
                                {% endif %}
                            </figure>
                        </div>

                        <div class="column has-background-light">
                            <div class="has-text-black">
                                {{ book.title }}
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
