<form method="post" action="{{ path('events_delete', {'id': event.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="button is-danger is-small">{% trans %}Delete{% endtrans %}</button>
</form>
