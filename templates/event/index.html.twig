                            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'entity' : event, 'entity_type' : 'event', 'text': 'Delete event'|trans, 'confirm_msg': 'Are you sure you want to delete this item?'|trans } %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">{% trans %}no records found{% endtrans %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="column is-flex is-justify-content-center is-flex-direction-row">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'all', 'entity' : null, 'entity_type' : 'event', 'type':'success', 'text': 'Back to Events page'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'new', 'entity' : null, 'entity_type' : 'event', 'text': 'Add'|trans } %}
        </div>
    </div>

{% endblock %}
