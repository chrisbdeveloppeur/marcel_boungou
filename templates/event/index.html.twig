{% extends 'base.html.twig' %}

{% block title %}{% trans %}Event index{% endtrans %}{% endblock %}

{% block body %}


    <h1 class="title has-text-white has-text-centered pt-3">{% trans %}Event index{% endtrans %}</h1>

    <div class="column is-flex is-justify-content-center is-flex-direction-row">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'all', 'entity' : null, 'entity_type' : 'event', 'type':'success', 'text': 'Back to Events page'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'new', 'entity' : null, 'entity_type' : 'event', 'text': 'Add'|trans } %}
        </div>
    </div>

    <div class="section">
        <div class="table-container">
            <table class="table">
                <thead>
                <tr class="has-background-black"><td class="subtitle has-text-success has-text-weight-bold has-text-centered" colspan="8">{{ 'Prochainement'|upper|trans }}</td></tr>
                <tr>
                    <th>{% trans %}Title{% endtrans %}</th>
                    <th>{% trans %}Datetime{% endtrans %}</th>
                    <th>{% trans %}Country{% endtrans %}</th>
                    <th>{% trans %}City{% endtrans %}</th>
                    <th>{% trans %}Post code{% endtrans %}</th>
                    <th>{% trans %}Street{% endtrans %}</th>
                    <th>{% trans %}Reservation link{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.datetime ? event.datetime|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ event.country }}</td>
                        <td>{{ event.city }}</td>
                        <td>{{ event.cp }}</td>
                        <td>{{ event.street }}</td>
                        <td><a href="{{ event.ticketingLink }}" target="_blank">{{ event.ticketingLink }}</a></td>
                        <td>
                            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'show', 'entity' : event, 'entity_type' : 'event', 'text': 'Show'|trans } %}
                            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'entity' : event, 'entity_type' : 'event', 'text': 'Edit'|trans } %}
                            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'entity' : event, 'entity_type' : 'event', 'text': 'Delete event'|trans, 'confirm_msg': 'Are you sure you want to delete this item?'|trans } %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">{% trans %}no records found{% endtrans %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>



        <div class="table-container">
            <table class="table">
                <thead>
                <tr class="has-background-black"><td class="subtitle has-text-success has-text-weight-bold has-text-centered" colspan="8">{{ 'Précédemment'|upper|trans }}</td></tr>
                <tr>
