{% extends 'base.html.twig' %}

{% block title %}{% trans %}Event{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="has-text-white subtitle has-text-centered">{% trans %}Event{% endtrans %}<b> {{ event }}</b></h1>

    <div class="column is-flex-tablet is-flex-direction-row is-justify-content-center">
        <div class="px-1 py-1">
            <a class="button is-dark is-fullwidth" href="{{ path('events_index') }}">{% trans %}back to events list{% endtrans %}</a>
        </div>
        <div class="px-1 py-1">
            <a class="button is-success is-fullwidth" href="{{ path('events_edit', {'id': event.id}) }}">{% trans %}edit{% endtrans %}</a>
        </div>
    </div>

<div class="table-container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}Date{% endtrans %}</th>
                <td>{{ event.datetime ? event.datetime|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Time{% endtrans %}</th>
                <td>{{ event.datetime ? event.datetime|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Country{% endtrans %}</th>
                <td>{{ event.country }}</td>
            </tr>
            <tr>
                <th>{% trans %}City{% endtrans %}</th>
                <td>{{ event.city }}</td>
            </tr>
            <tr>
                <th>{% trans %}Code post{% endtrans %}</th>
                <td>{{ event.cp }}</td>
            </tr>
            <tr>
                <th>{% trans %}Street{% endtrans %}</th>
                <td>{{ event.street }}</td>
            </tr>
            <tr>
                <th>{% trans %}Subscribers{% endtrans %}</th>
                <td>
                    <div class="select is-multiple is-fullwidth">
                        <select multiple size="5">
                            {% for subscriber in event.mailsToRemind %}
                                <option value="{{ subscriber }}">{{ subscriber }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

    {{ include('event/_delete_form.html.twig') }}

{% endblock %}
