<div class="" style="height: 100%;">
    <div class="has-background-primary-light item-{{ count_2 }}" style="height: 100%;">
        <div class="is-flex is-flex-direction-row has-background-success-light is-relative"  style="height: 100%;">
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('event/edit_event_button.html.twig') }}
            {% endif %}
            <figure class="is-3by1" style="height: 100%;">
            {% if event.image %}
                <img src="{{ asset('images/event_img/' ~ event.image) }}" alt="" style="height: 100%;object-fit: fill">
            {% else %}
                <img src="{{ asset('build/images/720x240.8013db28.png') }}" alt="" style="height: 100%;width: 100%;object-fit: fill">
            {% endif %}
            </figure>
            <div class="column has-background-success-light slider-container-child is-flex is-flex-direction-column">
                <h3 class="has-text-primary title has-text-weight-bold">
                    {{ event.title }}
                </h3>
                <div class="column is-flex is-align-items-center px-0 py-0">
                    <a href="https://www.google.fr/maps/search/{{ event.adresse }}" class="has-text-success column px-0 py-0" onclick="window.open(this.href, 'newwindow', 'height=570,width=520');return false;">
                        <span>
                            {{ event.adresse }}
                        </span>
                        <span  class="icon has-text-primary">
                            <i class="fas fa-lg fa-map-marker-alt"></i>
                        </span>
                    </a>
                </div>
                <div class="column is-flex is-align-items-center px-0 py-0">
                    <a class="has-text-success column px-0 py-0" onclick="document.querySelector('#modalEvent'+{{ event.id }}).classList.add('is-active')">
                        <span>
                            {{ event.datetime|format_datetime('full','short',locale=app.request.locale) }}
                        </span>
                        <span  class="icon has-text-primary">
                            <i class="fas fa-lg fa-calendar-alt"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
