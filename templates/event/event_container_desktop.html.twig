<div class="" style="height: 100%;">
    <div class="has-background-primary-light item-{{ count_2 }}" style="height: 100%;">
        <div class="is-flex is-flex-direction-row has-background-success-light is-relative"  style="height: 100%;">
            <a href="{{ path('events_edit', {'id': event.id}) }}" class="button borderless is-warning is-small" style="position:absolute;right: 0;z-index: 2;">
                <span class="icon">
                    <i class="fas fa-lg fa-edit"></i>
                </span>
            </a>
            {% if event.image %}
                <img src="{{ asset('images/event_img/' ~ event.image) }}" alt="" style="height: 100%;max-height: 100%;object-fit: contain">
            {% else %}
                <img src="{{ asset('build/images/default_event_affiche.6019243e.png') }}" alt="" style="height: 100%;max-height: 100%;object-fit: contain">
            {% endif %}
            <div class="column has-background-success-light slider-container-child is-flex is-flex-direction-column">
                <h3 class="has-text-dark title has-text-weight-bold">
                    {{ event.title }}
                </h3>
                <div class="column is-flex is-align-items-center px-0 py-0">
                    <a href="https://www.google.fr/maps/search/{{ event.adresse }}" class="has-text-success" onclick="window.open(this.href, 'newwindow', 'height=570,width=520');return false;">
                                    <span>
                                        {{ event.adresse }}
                                    </span>
                        <span  class="icon">
                                        <i class="fas fa-lg fa-map-marker-alt"></i>
                                    </span>
                    </a>
                </div>
                <div class="column is-flex is-align-items-center px-0 py-0">
                    <a class="has-text-success" onclick="document.querySelector('#modalEvent'+{{ event.id }}).classList.add('is-active')">
                                    <span>
                                        {{ event.datetime|format_datetime('full','short',locale=app.request.locale) }}
                                    </span>
                        <span  class="icon">
                                        <i class="fas fa-lg fa-calendar-alt"></i>
                                    </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>