{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in!{% endtrans %}{% endblock %}

{% block body %}
<div class="column is-two-fifths-desktop is-two-thirds-tablet has-background-light">
    <form method="post" class="" id="login-form">

        <h1 class="is-3 subtitle">{% trans %}Please sign in{% endtrans %}</h1>

        {% if error %}
            <div class="help tag is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif%}

        <div class="field">
            <label class="label" for="inputEmail">{% trans %}Email{% endtrans %}</label>
            <div class="control has-icons-left has-icons-right">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input" autocomplete="email" required autofocus>
                <span class="icon is-small is-left">
                    <i class="fas fa-at"></i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label" for="inputPassword">{% trans %}Password{% endtrans %}</label>
            <div class="control has-icons-left">
                <input type="password" name="password" id="inputPassword" class="form-control input input-password" autocomplete="current-password" required>
                <span class="icon is-small is-left">
                    <i class="fas fa-key"></i>
                </span>
                <div class="show-password">
                    <span class="icon is-small">
                        <i class="fas fa-eye-slash"></i>
                    </span>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="">
            <button class="button is-primary" type="submit">
                {% trans %}Sign in{% endtrans %}
            </button>

            {% if error %}
                {% if error.line == 77 %}
                    <a href="{{ path('app_register') }}" class="help button is-warning is-light">{% trans %}No account yet ? Add one now{% endtrans %}</a>
                {% elseif error.line == 92  %}
                    <a href="{{ path('app_forgot_password_request') }}" class="help button is-warning is-light">{% trans %}Forgot your password ?{% endtrans %}</a>
                {% endif %}
            {% endif %}
        </div>

    </form>
</div>
{% endblock %}
