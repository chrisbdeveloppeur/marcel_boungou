{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in!{% endtrans %}{% endblock %}

{% block body %}
    <div class="is-flex align-content-center is-justify-content-center is-100vh">
        <div class="is-flex is-align-items-center">
            <div class="column mx-2 shadow-box-1 has-text-white">
                <form method="post" class="has-text-white" id="login-form">

                    <h1 class="is-3 subtitle has-text-white">{% trans %}Please sign in{% endtrans %}</h1>

                    {% if error %}
                        <div class="help tag is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif%}

                    <div class="field">
                        <label class="label has-text-white" for="inputEmail">{% trans %}Email{% endtrans %}</label>
                        <div class="control has-icons-left has-icons-right">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input" autocomplete="email" required autofocus>
                            <span class="icon is-small is-left">
                        <i class="fas fa-at"></i>
                    </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label has-text-white" for="inputPassword">{% trans %}Password{% endtrans %}</label>
                        <div class="control has-icons-left">
                            <input type="password" name="password" id="inputPassword" class="form-control input input-password" autocomplete="current-password" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                            <div class="show-password">
                                <span class="button">
                                    <span class="icon is-small">
                                        <i class="fas fa-eye-slash"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="is-flex is-justify-content-end">
                        <button class="button is-primary" type="submit">
                            {% trans %}Sign in{% endtrans %}
                        </button>

