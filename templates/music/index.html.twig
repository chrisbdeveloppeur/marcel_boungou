{% extends 'base.html.twig' %}

{% block title %}{% trans %}Music list{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="title has-text-white has-text-centered pt-3">{% trans %}Music list{% endtrans %}</h1>

    <div class="column is-flex-tablet is-flex-direction-row">
        <div class="px-1 py-1">
            <a class="button is-dark is-fullwidth" href="{{ path('discography_index') }}">{{ 'Back to Discography page'|trans }}</a>
        </div>
        <div class="px-1 py-1">
            <a class="button is-success is-fullwidth" href="{{ path('music_new') }}">{% trans %}Create new{% endtrans %}</a>
        </div>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}File{% endtrans %}</th>
                <th>{% trans %}Album{% endtrans %}</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for music in music %}
                <tr>
                    <td>{{ music.id }}</td>
                    <td>{{ music.titre }}</td>
                    <td>{{ music.MusicName }}</td>
                    <td>
                        {% if music.album %}
                            <a class="has-text-success" href="{{ path('album_edit', {'id': music.album.id}) }}">{{ music.album }}</a>
                        {% endif %}
                    </td>
                    <td>
                        {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'show', 'entity' : music, 'entity_type' : 'music', 'text': 'Show'|trans } %}
                        {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'entity' : music, 'entity_type' : 'music', 'text': 'Edit'|trans } %}
                        {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'entity' : music, 'entity_type' : 'music', 'text': 'Delete music'|trans, 'confirm_msg': 'Are you sure you want to delete this item?'|trans } %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{% trans %}no records found{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="column is-flex-tablet is-flex-direction-row">
        <div class="px-1 py-1">
            <a class="button is-dark is-fullwidth" href="{{ path('discography_index') }}">{{ 'Back to Discography page'|trans }}</a>
        </div>
        <div class="px-1 py-1">
            <a class="button is-success is-fullwidth" href="{{ path('music_new') }}">{% trans %}Create new{% endtrans %}</a>
        </div>
    </div>

{% endblock %}
