{% extends 'base.html.twig' %}

{% block title %}{{ 'Music'|trans }}{% endblock %}

{% block body %}
    <h1 class="subtitle has-text-white has-text-centered pt-3">{{ 'Music'|trans }} <b> {{ music }}</b></h1>

    <div class="column is-flex-tablet is-flex-direction-row is-justify-content-center">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'index', 'entity' : music, 'entity_type' : 'music', 'text': 'Back to Musics list'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'entity' : music, 'entity_type' : 'music', 'text': 'Edit'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'entity' : music, 'entity_type' : 'music', 'text': 'Delete music'|trans, 'confirm_msg':'Are you sure you want to delete this item?'|trans } %}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Title'|trans }}</th>
                <td>{{ music.titre }}</td>
            </tr>
            <tr>
                <th>{{ 'File'|trans }}</th>
                <td>
                    {% if music.musicName %}
                        <audio src="{{ vich_uploader_asset(music, 'musicFile') }}" controls></audio>
                    {% endif %}
                    <span class="help">{{ music.musicName }}</span>
                </td>
            </tr>
            <tr>
                <th>{% trans %}Album{% endtrans %}</th>
                <td>{{ music.album }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
