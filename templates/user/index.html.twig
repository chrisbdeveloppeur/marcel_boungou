{% extends 'base.html.twig' %}

{% block title %}{% trans %}List of Managers{% endtrans %}{% endblock %}

{% block body %}

        <h1 class="subtitle is-3 has-text-white">{% trans %}List of Managers{% endtrans %}</h1>

        <div class="table-container">
            <table class="table">
                <thead>
                <tr>
                    <th>{% trans %}Email{% endtrans %}</th>
                    <th>{% trans %}Roles{% endtrans %}</th>
                    <th>{% trans %}Verified{% endtrans %} ?</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                {% trans %}Super Manager{% endtrans %}
                            {% else %}
                                {% trans %}Manager{% endtrans %}
                            {% endif %}
                        </td>
                        <td>
                            {% if user.verified %}
                                {% trans %}Yes{% endtrans %}
                            {% else %}
                                {% trans %}No{% endtrans %}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">{% trans %}edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">{% trans %}no records found{% endtrans %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="column">
            <a class="button is-success" href="{{ path('app_register') }}">{% trans %}Add a Manager{% endtrans %}</a>
        </div>

{% endblock %}
