<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="button is-danger" {% if 'ROLE_SUPER_ADMIN' in user.roles %}disabled title="{% trans %}You cannot delete the super admin account{% endtrans %}" {% endif %}>
        <span class="icon">
            <i class="fas fa-times"></i>
        </span>
        <span>
            {% trans %}Delete{% endtrans %}
        </span>
    </button>
</form>
