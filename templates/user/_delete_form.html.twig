<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="button is-small is-danger is-light">{% trans %}Delete{% endtrans %}</button>
</form>
