{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1 class="subtitle has-text-white has-text-centered pt-3">{{ 'Picture'|trans }} {{ picture.id }}</h1>

    <div class="column is-flex-tablet is-flex-direction-row is-justify-content-center">
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'index', 'entity' : picture, 'entity_type' : 'picture', 'text': 'Back to Pictures list'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'edit', 'entity' : picture, 'entity_type' : 'picture', 'text': 'Edit'|trans } %}
        </div>
        <div class="px-1 py-1">
            {% include 'includes/index_entity_buttons/global_btn.html.twig' with {'action' : 'delete', 'entity' : picture, 'entity_type' : 'picture', 'text': 'Delete picture'|trans, 'confirm_msg':'Are you sure you want to delete this item?'|trans } %}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ picture.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ picture.image }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ picture.updatedAt ? picture.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
